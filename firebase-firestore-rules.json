{
  "rules": {
    "tasks": {
      ".read": "auth != null",
      "$taskId": {
        ".read": "auth != null && (auth.uid == resource.data.userId || auth.uid == resource.userId)",
        ".write": "auth != null && (auth.uid == request.resource.data.userId || auth.uid == request.resource.userId || !resource.exists)",
        ".create": "auth != null && auth.uid == request.resource.data.userId",
        ".update": "auth != null && (auth.uid == resource.data.userId || auth.uid == resource.userId)",
        ".delete": "auth != null && (auth.uid == resource.data.userId || auth.uid == resource.userId)"
      }
    }
  }
}